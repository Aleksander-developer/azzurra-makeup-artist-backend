{
  "compilerOptions": {
    "target": "es2020", // O "es2016" se preferisci mantenere la stessa versione del tuo progetto funzionante
    "module": "commonjs",
    "lib": ["es2020"], // Mantieni solo es2020, senza "dom"
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node" // Mantieni questa riga, Ã¨ utile
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"] // Mantieni "dist" qui
}
